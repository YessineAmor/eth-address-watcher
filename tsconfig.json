{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "build",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}